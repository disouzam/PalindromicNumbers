{
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "ConsoleApp": "Fatal",
        "Palindromes": "Fatal"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:u} {Level:u3}] - {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "D:\\GitHubRepos\\Palindromes\\ConsoleApp\\Logs\\logs.txt",
          "outputTemplate": "[{Timestamp:u} {Level:u3}] - {Message}{NewLine:1}{Exception:1}",
          "buffered": "true",
          "flushToDiskInterval": "00:01:00"
        }
      }
    ]
  }
}